{# page--about.html.twig #}
{# No extends needed; keep it simple and self-contained #}
<div class="page-about">
  {{ page.header }}

  <main role="main">
    <div class="container py-5">

      <h1 class="display-4 mb-4">
        {{ node is defined ? node.label : 'About' }}
      </h1>

      {# Your normal Drupal content (Body, fields, etc.) #}
      <div class="mb-4">
        {{ page.content }}
      </div>

      {# Hard-coded Bootstrap accordion #}
      <div class="accordion" id="aboutAccordion">
        <div class="accordion-item">
          <h2 class="accordion-header" id="aboutHeadingOne">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#aboutCollapseOne"
              aria-expanded="true" aria-controls="aboutCollapseOne">
              Our Mission
            </button>
          </h2>
          <div id="aboutCollapseOne" class="accordion-collapse collapse show" aria-labelledby="aboutHeadingOne"
            data-bs-parent="#aboutAccordion">
            <div class="accordion-body">
              Put mission copy here, or render a field via {{- ' ' -}} <code>{{ content.field_mission }}</code>.
            </div>
          </div>
        </div>

        <div class="accordion-item">
          <h2 class="accordion-header" id="aboutHeadingTwo">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
              data-bs-target="#aboutCollapseTwo" aria-expanded="false" aria-controls="aboutCollapseTwo">
              Our Story
            </button>
          </h2>
          <div id="aboutCollapseTwo" class="accordion-collapse collapse" aria-labelledby="aboutHeadingTwo"
            data-bs-parent="#aboutAccordion">
            <div class="accordion-body">
              Background / timeline content…
            </div>
          </div>
        </div>

        <div class="accordion-item">
          <h2 class="accordion-header" id="aboutHeadingThree">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
              data-bs-target="#aboutCollapseThree" aria-expanded="false" aria-controls="aboutCollapseThree">
              FAQs
            </button>
          </h2>
          <div id="aboutCollapseThree" class="accordion-collapse collapse" aria-labelledby="aboutHeadingThree"
            data-bs-parent="#aboutAccordion">
            <div class="accordion-body">
              Q/A goes here…
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  {{ page.footer }}
</div>