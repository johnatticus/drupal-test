# --- Composer ---
/vendor/

# --- Drupal docroot (recommended-project: /web) ---
/web/core/
/web/libraries/
/web/modules/contrib/
/web/profiles/contrib/
/web/themes/contrib/

/web/sites/*/files/
/web/sites/*/private/
/web/sites/*/files/css/
/web/sites/*/files/js/

# Site-specific services/settings (donâ€™t commit secrets)
